extends layout

block content
  h1= title
  - let items = results; 
  - let o;
  script.
    function buy(x){
      alert('Purchased Item: ' + x)
   } 
  div(class='container-fluid')
    div(class='row m-1')
      each o, c in items 
        - let destination = `dispatch(\"/tea/update?id=${o._id}\")`
        - let detail=`dispatch(\"/tea/detail/?id=${o._id}\")`
        - let del=`dispatch(\"/tea/delete/?id=${o._id}\")`
        div(class='col-sm-3' onclick=`buy(${c})`) #{o.tea_type} 
        div(class='col-sm-3' onclick=`buy(${c})`) #{o.size} 
        button.btn( class="btn-primary ml-1", onclick= destination) Update
        button.btn( class="btn-secondary ml-2", onclick= detail) Detail
        button.btn( class="btn-warning ml-2", onclick= del) Delete
        
  script.
    function dispatch(path){
    window.location.href=path
    }